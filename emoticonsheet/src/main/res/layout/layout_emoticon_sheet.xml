<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/emoticon_group_view_pager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="visible" />

    <com.zeal.android.emoticonsheet.layout.PagerSlidingTabStrip
        android:id="@+id/emoticon_group_tab"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/emoticon_group_view_pager"
        android:visibility="visible"
        app:pstsIndicatorHeight="4dp"
        app:pstsShouldExpand="true"
        app:pstsTabPaddingLeftRight="0dp" />
    <!-- 希望加个选中的背景 -->
    <!-- app:pstsDividerColor="#a7a5a5" -->
    <!-- app:pstsIndicatorColor="#ffffff" -->
    <!-- app:pstsUnderlineColor="#ffffff" -->

</RelativeLayout>